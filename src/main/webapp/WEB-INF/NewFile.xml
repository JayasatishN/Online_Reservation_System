<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         version="3.1">
    <!-- Mapping for HelloServlet -->
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>First.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    
    <!-- Mapping for CreateAccountServlet -->
    <servlet>
        <servlet-name>CreateAccountServlet</servlet-name>
        <servlet-class>First.CreateAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateAccountServlet</servlet-name>
        <url-pattern>/CreateAccountServlet</url-pattern>
    </servlet-mapping>
        <!-- Mapping for LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>First.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
<servlet>
    <servlet-name>ReservationServlet</servlet-name>
    <servlet-class>First.ReservationServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ReservationServlet</servlet-name>
    <url-pattern>/ReservationServlet</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>CancellationServlet</servlet-name>
    <servlet-class>First.CancellationServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>CancellationServlet</servlet-name>
    <url-pattern>/CancellationServlet</url-pattern>
</servlet-mapping>


    <welcome-file-list>
		<welcome-file>logo.html</welcome-file>
	</welcome-file-list>
	<welcome-file-list>
    <welcome-file>reservation.html</welcome-file>
</welcome-file-list>

</web-app>
